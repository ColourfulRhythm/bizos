{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/generate",
      "destination": "/api/generate.js"
    },
    {
      "source": "/api/generate-plan",
      "destination": "/api/generate-plan.js"
    },
    {
      "source": "/api/generate-content",
      "destination": "/api/generate-content.js"
    },
    {
      "source": "/api/generate-document",
      "destination": "/api/generate-document.js"
    },
    {
      "source": "/api/verify-payment",
      "destination": "/api/verify-payment.js"
    },
    {
      "source": "/api/webhook",
      "destination": "/api/webhook.js"
    },
    {
      "source": "/api/send-email",
      "destination": "/api/send-email.js"
    },
    {
      "source": "/favicon.ico",
      "destination": "/api/favicon.js"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/BizOS_MVP.html",
      "destination": "/BizOS_MVP.html"
    }
  ]
}
